<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restauto.cook.display.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="file" mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="returnHome" mnemonicParsing="false" text="Return Home"   onAction="#handleReturnHome"/>
              <MenuItem fx:id="logOut" mnemonicParsing="false" text="Log Out"   onAction="#handleLogOut"/>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="edit" mnemonicParsing="false" text="Edit Table">
            <items>
              <CheckMenuItem fx:id="name" mnemonicParsing="false" text="Name"  onAction="#handleChangeViewType" selected="true"  />
              <CheckMenuItem fx:id="table" mnemonicParsing="false" text="Table" onAction="#handleChangeViewType"  selected="true"  />              
              <CheckMenuItem fx:id="time" mnemonicParsing="false" text="Time"  onAction="#handleChangeViewType"  selected="true"  />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" onAction="#handleAbout"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
